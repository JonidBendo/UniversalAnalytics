<?xml version="1.0"?>
<!--
/**
 * This is the layout xml file for BlueAcorn Optimizely. It creates two
 * blocks within a text_list block that output the sitewide optimizely script,
 * and the page specific targeting variables.
 *
 * Author: James Bruner, Blue Acorn
 * Version: 1.0.1
 */

-->
<layout version="0.1.0">
    <default>
        <reference name="head" before="-">
            <block type="core/text_list" name="universalanalytics" as="universalanalytics" after="-">
                <block type="universalanalytics/customVariables" name="universalanalytics_customer_type"
                       as="universalanalytics_customer_type"
                       template="blueacorn/universalanalytics/customVariables.phtml"/>
                <block type="core/template" name="universalanalytics_sitewide" as="universalanalytics_sitewide"
                       template="blueacorn/universalanalytics/sitewideJs.phtml"/>
            </block>
        </reference>
    </default>
</layout>
